doctype html
html
  head
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Party Money
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/vex-js/4.1.0/css/vex.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/vex-js/4.1.0/css/vex-theme-default.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css")
    link(rel="stylesheet", href="/css/style.css")

    script(src="/socket.io/socket.io.js") 
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/vex-js/4.1.0/js/vex.combined.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js")
    script(src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js")
    script(src="/js/app.js")
    script.
      vex.defaultOptions.className = 'vex-theme-default'
      vex.dialog.buttons.YES.text = 'Đồng ý'
      vex.dialog.buttons.NO.text = 'Huỷ'
    block style

  body
    .container
      block content
    //- show message in app
    if session && session.message
      if session.message.show == 'toast'
        script.
          toastr.options.preventDuplicates = true;
          toastr['!{session.message.type}']('!{session.message.content}');
      else if session.message.show == 'alert'
        script.
          alert('!{session.message.content}');

      //- remove session message
      -session.message = false